pkgname=expat
pkgver=2.2.5
pkgrel=3
pkgdesc='An XML parser library'
arch=('x86_64')
url='https://libexpat.github.io'
license=('custom')
depends=('libc')
source=(
  http://downloads.sourceforge.net/sourceforge/expat/$pkgname-$pkgver.tar.bz2
)
sha256sums=(
  'd9dc32efba7e74f788fcc4f212a43216fc37cf5f23f4c2339664d473353aedf6'
)

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/opt/arch
  make
}

check() {
  make -C $pkgname-$pkgver check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  ginstall -dm755 "$pkgdir"/opt/arch/share/licenses/$pkgname
  ginstall -m644 COPYING "$pkgdir"/opt/arch/share/licenses/$pkgname/COPYING
}
