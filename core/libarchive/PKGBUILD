pkgname=libarchive
pkgver=3.3.1
pkgrel=1
pkgdesc="library that can create and read several streaming archive formats"
arch=('x86_64')
url="http://libarchive.org/"
license=('BSD')
depends=()
#options=('strip' 'debug' 'libtool')
options=('strip' 'libtool')
#provides=('libarchive.so')
source=("https://libarchive.org/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('d2af45480aa5b0db5b5f3919cd0ea65e')

build() {
  cd "$pkgname-$pkgver"
  ./build/autogen.sh
  ./configure --prefix=/opt/arch \
    --without-lzo2 \
    --without-xml2 \
    --without-nettle \
    --without-lzo2 \
    --without-openssl \
    --with-expat
  make
}

check() {
  cd "$pkgname-$pkgver"

  make check
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install

  ginstall -d -m755 "$pkgdir"/opt/arch/share/licenses/libarchive
  ginstall -m644 COPYING "$pkgdir"/opt/arch/share/licenses/libarchive/COPYING
}
