pkgbase=python3-six
pkgname=('python3-six')
pkgver=1.12.0
pkgrel=1
pkgdesc="Python 2 and 3 compatibility utilities"
arch=('any')
url="http://pypi.python.org/pypi/six/"
license=('MIT')
makedepends=('python3')
source=('https://files.pythonhosted.org/packages/dd/bf/4138e7bfb757de47d1f4b6994648ec67a51efe58fa907c1e11e350cddfca/six-1.12.0.tar.gz')
sha256sums=('d16a0141ec1a18405cd4ce8b4613101da75da0e9a7aec5bdd4fa804d0e0eba73')

build() {
  cd $srcdir
  cp -r six-$pkgver six2-$pkgver
}

check() {
  cd $srcdir/six-$pkgver 
  python3 setup.py check

  #cd $srcdir/six2-$pkgver
  #python2 setup.py check
}

package_python3-six() {
  depends=('python3')
  cd $srcdir/six-$pkgver 
  python3 setup.py install --root "${pkgdir}" --optimize=1
  install -dm755 "${pkgdir}/opt/arch/share/licenses/${pkgname}"
  install -m644 "${srcdir}/six-${pkgver}/LICENSE" "${pkgdir}/opt/arch/share/licenses/${pkgname}/LICENSE"
}

