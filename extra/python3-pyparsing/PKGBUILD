pkgname=python3-pyparsing
pkgname=('python3-pyparsing')
pkgver=2.3.1
pkgrel=1
pkgdesc='General parsing module for Python'
arch=('any')
url='http://pyparsing.wikispaces.com/'
makedepends=('python3-setuptools')
license=('MIT')
source=('https://files.pythonhosted.org/packages/b9/b8/6b32b3e84014148dcd60dd05795e35c2e7f4b72f918616c61fdce83d27fc/pyparsing-2.3.1.tar.gz')
sha256sums=('66c9268862641abcac4a96ba74506e594c884e3f57690a696d21ad8210ed667a')

#prepare() {
#  cp -r "pyparsing-$pkgver" py2
#}

package_python3-pyparsing() {
  depends=('python3')
  cd "pyparsing-$pkgver"

  rm -rf build
  python3 setup.py install --prefix=/opt/arch --root="$pkgdir" --optimize=1
  install -dm755 "$pkgdir/opt/arch/share/licenses/$pkgname"
  install -m644 LICENSE "$pkgdir/opt/arch/share/licenses/$pkgname/LICENSE"
}

